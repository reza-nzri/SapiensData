{
	"ConnectionStrings": {
		"DefaultConnection": "Server=${DB_SERVER_IP};Database=SapeinsData;Trusted_Connection=True;Encrypt=False;"
	},
	"Jwt": {
		"Key": "${JWT_KEY}",
		"Issuer": "DeineMutter",
		"Audience": "DeinVater",
		"DurationInMinutes": 30,
		"RefreshTokenDurationInDays": 7
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.EntityFrameworkCore.Database.Command": "Information",
			"Microsoft.IdentityModel.Tokens": "Debug"
		}
	},
	"AllowedHosts": "*"
}